<Window x:Class="DataGridLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataGridLab"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False"  Sorting="DataGrid_OnSorting" ItemsSource="{Binding }">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Unit Price" SortDirection="Ascending"  Binding="{Binding UnitPrice}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
